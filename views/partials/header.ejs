      </ul>
    </div>
  </nav>
  <script>
    document.querySelector("#toggleButton").addEventListener("change", function () {
      if (this.checked) {

        document.querySelector(".head-navbar").classList.add("navbar-black")
        document.querySelector("body").classList.add("body-black")
        document.querySelector(".footer").classList.add("transparent-footer")
        const checkboxd = document.querySelector("#toggleButton")
        const checked = checkboxd.checked;
        localStorage.setItem(checkboxd, checked)
      } else {
        document.querySelector(".head-navbar").classList.remove("navbar-black")
        document.querySelector("body").classList.remove("body-black")
        document.querySelector(".footer").classList.remove("transparent-footer")
      }
    })
  </script>

